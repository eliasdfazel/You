<resources>

    <style name="GeeksEmpire.Material" parent="Theme.MaterialComponents.Light.NoActionBar">

        <item name="android:colorPrimary">@color/primaryColorGreen</item>
        <item name="android:colorPrimaryDark">@color/premiumDark</item>
        <item name="android:colorAccent">@color/primaryColorBlue</item>

        <item name="colorPrimary">@color/primaryColorGreen</item>
        <item name="colorPrimaryDark">@color/premiumDark</item>
        <item name="colorAccent">@color/primaryColorBlue</item>

        <item name="android:windowBackground">@drawable/splash_screen_initial</item>

        <item name="android:navigationBarColor">@color/primaryColorGreen</item>
        <item name="android:statusBarColor">@color/primaryColorGreen</item>

        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>

        <item name="android:windowContentTransitions">true</item>

        <item name="android:windowEnterAnimation">@anim/fade_in</item>
        <item name="android:windowExitAnimation">@anim/fade_out</item>

    </style>

    <style name="Transparent" parent="@android:style/Theme.DeviceDefault.Light.Dialog.NoActionBar">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:dividerHeight">0dp</item>
        <item name="android:divider">@null</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
    </style>

</resources>