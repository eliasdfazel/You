<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item
        android:id="@+id/rippleMask"
        android:gravity="center">

        <ripple
            android:color="@color/white"
            android:effectColor="@color/primaryColorPurpleLight">

            <item
                android:id="@android:id/mask">

                <shape
                    android:shape="rectangle">

                    <corners
                        android:radius="19dp"/>

                    <solid
                        android:color="@color/primaryColorPurpleLight" />

                </shape>

            </item>

        </ripple>

    </item>

</layer-list>